<item name="epic_gold_crate" class="BaseBuildingItem" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="-1"/> <!-- infinite mass so can't be moved -->
		<param name="display_name" value="Golden Storage Crate"/>
		<param name="description" value="A golden storage crate that takes long to construct, but provides you with 50 slots. Has a lock."/>
	</params>

	<geometry>
		<thirdperson name="Objects\Pegasus77\basebuilding\gold_crate.cgf"/>
	</geometry>

	<storage>
		<params>
			<param name="has_lock" value="1"/>
		</params>
		<types>
			<type category="any" capacity="50"/>
		</types>
	</storage>	

</item>