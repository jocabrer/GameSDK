<item name="minecart_base" class="BaseBuildingItem" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="-1"/> <!-- infinite mass so can't be moved -->
		<param name="display_name" value="Carro Almacenamiento Minero"/>
		<param name="description" value="Almacenamiento ideal para minerales y metales, pero puede almacenar cualquier artículo. Límite: 3."/>
	</params>

	<geometry>
		<thirdperson name="Objects\Pegasus77\basebuilding\storage\minecart.cgf"/>
	</geometry>

	<storage>
		<params>
			<param name="crate" value="1"/>
			<param name="has_lock" value="1"/>
		</params>
		<types>
			<type category="any" capacity="40"/>
		</types>
		<locations>
			<location category="any"/>
		</locations>
	</storage>	

</item>