<item name="Icepickaxe" class="Weapon" category="secondary" priority="1" weaponParams="1">
	<params>
		<param name="display_name" value="Icepickaxe"/>
		<param name="description" value="Multi-Tool Gathering Item"/>
		<param name="itemClass" value="1hmelee"/>
		<param name="suffix" value="shoulder"/>
		<param name="mass" value="2.5"/>
		<param name="healthMax" value="200.0"/>
		<param name="damage_scale" value="0.25"/>
		<param name="bleed_percent" value="55"/>  
		<param name="select_delayed_grab_3P" value="1"/>
		<param name="select_override" value="1"/> <!-- Delay for 1s after selecting to prevent insta-use -->
		<param name="attach_to_back" value="1"/>
		<param name="bone_attachment_01" value="stow_primary1"/>
		<param name="bone_attachment_02" value="stow_primary2"/>
		<param name="sprintToFireDelay" value="0.05"/> <!-- Time delay to prevent player from firing after sprinting stopped -->
		<param name="sprintToZoomDelay" value="0.1"/> <!-- Time delay to prevent player from zoom after sprinting stopped -->
		<param name="runToSprintBlendTime" value="0.3"/>
		<param name="sprintToRunBlendTime" value="0.15"/>
		<param name="relaxedToTacticalBlendTime" value="0.45"/>
		<param name="tag" value="pickaxe"/>
		<animPrecache name="pickaxe">
			<precache DBAFile="animations/human/male/weapons/pickaxe/pickaxe_3p.dba" thirdperson="1"/>
		</animPrecache>
		<aimAnims/>
	</params>

	<MovementModifiers speedScaleTactical="0.85" speedScale="1.0" rotationScale="1.0" firingSpeedScale="0.65"/>

	<geometry>
		<thirdperson name="objects/weapons/icepickaxe/icepickaxe_tp.cgf" material="objects/weapons/icepickaxe/icepickaxe_mat.mtl"/>
		<firstperson name="objects/weapons/icepickaxe/icepickaxe_tp.cgf" material="objects/weapons/icepickaxe/icepickaxe_mat.mtl"/>
		<onground name="objects/weapons/icepickaxe/icepickaxe.cgf" material="objects/weapons/icepickaxe/icepickaxe_mat.mtl"/>
	</geometry>

	<usable>
        <param name="title" value="Salvage to Sheet Metal"/>
        <param name="action" value="craft"/>
        <param name="param" value="SheetMetal"/>
        <param name="soundUsed" value=""/>
    </usable>

	<firemodes>
		<firemode name="melee" type="Melee">
			<melee>
				<param name="helper" value="collision"/>
				<param name="hit_type" value="pickaxe"/>
				<param name="range" value="1.6"/>
				<param name="damage" value="49"/>
				<param name="impulse" value="10"/>
				<param name="impulse_actor" value="30"/>
				<param name="impulse_ai_to_player" value="0"/> <!-- < -1 uses impulse actor instead -->
				<param name="impulse_vehicle" value="40"/>
				<param name="delay" value="0.387"/>
				<param name="aiDelay" value="0.05"/>
				<param name="duration" value="0.9"/>
				<param name="knockdown_chance" value="0.0"/>  <!-- 0 to 100 -->
				<param name="impulse_up_percentage" value="0.0"/>
				<param name="use_melee_weapon_delay" value="-1.0"/> <!-- use the hardcoded delay above -->
				<param name="weapon_restore_delay" value="0.0"/>
				<param name="trigger_client_reaction" value="1"/> <!-- causes the tag "meleeReaction" from the weapon to be played on the target -->
				<param name="sound_radius" value="10"/>
			</melee>
			<SurfaceBehaviors> <!-- allows the melee weapon to harvest resources -->
				<param name="default" deteriorationFactor="0.5"/> <!-- Loses 1% health per-hit on all surfaces ("default"), will expand later -->
				<param name="mat_rock_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
				<param name="mat_iron_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
				<param name="mat_pyrite_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
				<param name="mat_coal_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
				<param name="mat_metal_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
				<param name="mat_wood_harvest" harvestFactor="1.5" deteriorationFactor="0.25"/>
			</SurfaceBehaviors>
		</firemode>
	</firemodes>

	<storage>
		<locations>
			<location category="secondary"/>
			<location category="any"/>
		</locations>
	</storage>
</item>